@require '../../styles/variables.styl'

$transitionTime = 200ms

.wrap
  z-index: 10
  position: absolute
  top: 1px
  left: 0
  right: 0
  bottom: 0
  overflow: hidden

.overlay
  z-index: -1
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  background: rgba(#333, 0.7)

.inputWrap
  position: relative
  height: $searchInputHeight
  padding: 0 45px 0 20px
  background: #262626

.input
  width: 100%
  height: 100%
  border: 0
  outline: 0

  background: transparent
  color: #FFF

  &::-webkit-input-placeholder
    color: #FFF

.inputCleaner
  position: absolute
  top: 14px
  right: 20px

  :global .material-icons
    font-weight: bold
    font-size: 15px

.trackList,
.notFound
  height: 'calc(100% - %s)' % ($searchInputHeight)
  background: $baseBgColor

.trackList
  overflow-x: hidden
  overflow-y: auto

.notFound
  display: flex
  flex-direction: column
  padding: 140px 70px 0
  text-align: center

.notFoundTitle
  font-weight: normal
  font-size: 16px
  margin: 0 0 70px
  color: #FFF

.notFoundText
  margin: 0

.track
  margin-left: 15px
  padding: 10px 15px 10px 0
  box-shadow: 0 0.5px #343434

.trackFirstLine
  display: flex
  justify-content: space-between
  margin-bottom: 4px

.trackTitle
  color: #FFF

.highlight
  color: $accentColor
  background: transparent

:global .search-enter
  :local .overlay
    opacity: 0.01

  :local .inputWrap
    transform: translateY(-40px)

  :local .trackList
    transform: translateY(100%)

:global .search-enter-active
  :local .overlay
    opacity: 1
    transition: opacity $transitionTime

  :local .inputWrap,
  :local .trackList
    transform: translateY(0)
    transition: transform  $transitionTime

:global .search-leave
  :local .overlay
    opacity: 1

  :local .inputWrap,
  :local .trackList
    transform: translateY(0)

:global .search-leave-active
  :local .overlay
    opacity: 0.01
    transition: opacity $transitionTime

  :local .inputWrap
    transform: translateY(-40px)
    transition: transform  $transitionTime

  :local .trackList
    transform: translateY(100%)
    transition: transform  $transitionTime
