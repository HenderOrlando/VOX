@require '../../styles/variables.styl'

.wrap
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0

  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

  background: $baseBgColor
  color: #FFF

.title
  font-size: 16px
  font-weight: normal

  margin: 0 0 6px

.spinner:before,
.spinner:after,
.spinner
  width: 10px
  height: 10px
  border-radius: 50%

  animation-fill-mode: gboth
  animation: loader 1.8s infinite ease-in-out

.spinner
  position: relative
  margin: 0 15px

  color: $accentColor

  animation-delay: 0.16s

  &:before
    left: -15px

  &:after
    left: 15px
    animation-delay: 0.32s

  &:before,
  &:after
    content: ''
    position: absolute
    top: 0

@keyframes loader
  0%,
  80%,
  100%
    box-shadow: 0 10px 0 -10px

  40%
    box-shadow: 0 10px 0 0
