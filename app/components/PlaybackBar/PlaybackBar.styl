@require '../../styles/variables.styl'

.wrap
  position: relative
  z-index: 1

  display: flex
  justify-content: space-between

  height: $playerBarHeight
  padding: 0 20px

  background: $playerBarBg
  box-shadow: 0 0.5px #464646

  -webkit-app-region: drag

.main
  position: relative
  display: flex
  padding: 0 14px

.button
  display: flex
  align-items: center

  padding: 0 10px
  outline: none
  border: 0

  cursor: default

  background: none
  color: #FFF

  -webkit-app-region: no-drag

.minimize,
.prev,
.play,
.next,
.search
  composes: button

.minimize,
.search
  padding: 0 14px

.prev,
.next,
.search
  :global .material-icons
    font-size: 20px
